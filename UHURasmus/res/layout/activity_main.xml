<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/frmsplash_background"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/frmLogin_AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/frmLogin_Pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frmLogin_User"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="@string/frmlogin_passhint"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/frmLogin_LogButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frmLogin_Pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Button" />

    <TextView
        android:id="@+id/frmLogin_BasesConv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frmLogin_LogButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/frmlogin_bases"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/frmLogin_Escudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frmLogin_BasesConv"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/frmLogin_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frmLogin_Pass"
        android:layout_below="@+id/frmLogin_AppName"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="@string/frmlogin_userhint" />

</RelativeLayout>
